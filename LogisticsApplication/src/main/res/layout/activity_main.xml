<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:CustomButton="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/new_back2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10">

        <com.logimetrix.nj.logistics_project.utills.CustomTextView
            android:id="@+id/damage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAMAGE"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_minus1"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_4"
            android:textStyle="bold"
            CustomTextView:textStyle="8"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_minus4"
            android:layout_marginBottom="@dimen/dp_5">
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/tv_damage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:text="Select Batch Number"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:background="@drawable/remarks">
            </com.logimetrix.nj.logistics_project.utills.CustomTextView>
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="right|center"
                android:layout_marginTop="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/add" />
        </FrameLayout>
        <com.logimetrix.nj.logistics_project.utills.CustomTextView
            android:id="@+id/shortage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHORTAGE"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_minus1"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_4"
            android:textStyle="bold"
            CustomTextView:textStyle="8"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_minus4"
            android:layout_marginBottom="@dimen/dp_5">
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/tv_shortage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:text="Select Batch Number"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:background="@drawable/remarks">
            </com.logimetrix.nj.logistics_project.utills.CustomTextView>
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="right|center"
                android:layout_marginTop="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/add" />
        </FrameLayout>
        <com.logimetrix.nj.logistics_project.utills.CustomTextView
            android:id="@+id/leakage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEAKAGE"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_minus1"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_4"
            android:textStyle="bold"
            CustomTextView:textStyle="8"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_minus4"
            android:layout_marginBottom="@dimen/dp_5">
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/tv_leakage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:text="Select Batch Number"
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:background="@drawable/remarks">
            </com.logimetrix.nj.logistics_project.utills.CustomTextView>
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="right|center"
                android:layout_marginTop="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/add" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:id="@+id/camera_layout">

            <ImageView
                android:id="@+id/main_camera"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center"
                android:padding="@dimen/dp_6"
                android:src="@drawable/camera_white" />

            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAPTURE IMAGE"
                android:gravity="center"
                android:textColor="@color/white"
                CustomTextView:textStyle="8"
                android:layout_marginTop="@dimen/dp_0">
            </com.logimetrix.nj.logistics_project.utills.CustomTextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">
            <ImageView
                android:id="@+id/im1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:visibility="gone"
                android:layout_weight="1"
                android:src="@drawable/camera_white"
                android:padding="@dimen/dp_4" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:src="@drawable/camera_white"
                android:visibility="gone"
                android:layout_weight="1"
                android:padding="@dimen/dp_4"/>
            <ImageView
                android:id="@+id/im3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:src="@drawable/camera_white"
                android:layout_weight="1"
                android:visibility="gone"
                android:padding="@dimen/dp_4" />
        </LinearLayout>

        <com.logimetrix.nj.logistics_project.utills.CustomTextView
            android:id="@+id/tv_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMARKS"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_minus1"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_4"
            CustomTextView:textStyle="8"
            android:textStyle="bold" />
        <com.logimetrix.nj.logistics_project.utills.CustomEditText
            android:id="@+id/et_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write Remarks"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/remarks"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            android:lines="3"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_minus2"
            android:padding="@dimen/dp_4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:background="@drawable/white_round_corner"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_5">
                <ImageView
                    android:id="@+id/user_sign"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/signatur"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_4"/>
                <com.logimetrix.nj.logistics_project.utills.CustomTextView
                    android:id="@+id/tvuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USER SIGNATURE"
                    CustomTextView:textStyle="8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_2">
                </com.logimetrix.nj.logistics_project.utills.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:background="@drawable/white_round_corner"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_5">
                <ImageView
                    android:id="@+id/client_sign"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/signatur"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_4"/>
                <com.logimetrix.nj.logistics_project.utills.CustomTextView
                    android:id="@+id/tvclient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLIENT SIGNATURE"
                    android:gravity="center"
                    android:textColor="@color/white"
                    CustomTextView:textStyle="8"
                    android:layout_marginTop="@dimen/dp_2">
                </com.logimetrix.nj.logistics_project.utills.CustomTextView>
            </LinearLayout>
        </LinearLayout>
        <com.logimetrix.nj.logistics_project.utills.CustomButton
            android:id="@+id/complete_btn"
            android:layout_width="@dimen/dp_220"
            android:layout_height="wrap_content"
            android:text="JOB COMPLETED"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/orange_button"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:textStyle="bold"
            CustomButton:textStyle="8"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"/>
    </LinearLayout>
</ScrollView>