<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:CustomButton="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_margin="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shortage_cross"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/cross"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_minus1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"/>
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/shortage_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INVOICE NO."
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_minus1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="8"/>
            <com.logimetrix.nj.logistics_project.utills.CustomEditText
                android:id="@+id/et_shortage_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter invoice number"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/rectangle"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_10"/>

            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/shortage_batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BATCH NO."
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_minus1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="8"/>
            <com.logimetrix.nj.logistics_project.utills.CustomEditText
                android:id="@+id/et_shortage_batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter batch number"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/rectangle"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_10"/>
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/shortage_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VALUE OF ITEM"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_minus1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="8"/>
            <com.logimetrix.nj.logistics_project.utills.CustomEditText
                android:id="@+id/et_shortage_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter value of item"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/rectangle"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_10"/>
            <com.logimetrix.nj.logistics_project.utills.CustomTextView
                android:id="@+id/shortage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_minus1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="8"/>
            <com.logimetrix.nj.logistics_project.utills.CustomEditText
                android:id="@+id/et_shortage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write shortage material description"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/rectangle"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/sp_13"
                android:padding="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_10"/>
            <com.logimetrix.nj.logistics_project.utills.CustomButton
                android:id="@+id/shortage_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:gravity="center"
                android:background="@color/orange"
                android:layout_marginTop="@dimen/dp_1"
                android:padding="@dimen/dp_10"
                CustomButton:textStyle="8"
                android:textSize="@dimen/sp_17"
                android:layout_gravity="center" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>